{
  "manifest_version": 3,
  "name": "TabFlow - Intent-Based Productivity",
  "version": "2.0.0",
  "description": "Transform tab chaos into focused productivity with AI-powered intent tracking and smart tab management",
  "permissions": [
    "storage",
    "tabs",
    "tabGroups",
    "notifications",
    "alarms",
    "identity"
  ],
  "host_permissions": [
    "https://tabflow-api.vercel.app/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "newtab/newtab.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}